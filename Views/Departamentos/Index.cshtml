@model IEnumerable<AgoraVaiRecursosHumanos.Models.Departamentos>

@{
    ViewBag.Title = "Index";
}

<h2>Departamentos</h2>

<p>
    <a href="/departamentos/create" class="btn btn-success">Cadastrar</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            <a class="btn btn-primary" href="/Departamentos/Details/@item.Id"> Consulta </a> |
            <a class="btn btn-warning" href="/Departamentos/edit/@item.Id">Editar </a> |
            <a class="btn btn-danger" href="/Departamentos/delete/@item.Id">Excluir </a>
        </td>
    </tr>
}

</table>
