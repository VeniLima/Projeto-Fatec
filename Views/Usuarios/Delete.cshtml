@model AgoraVaiRecursosHumanos.Models.Usuarios

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Você tem certeza que deseja deletar ?</h3>
<div>
    <h4>Usuarios</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Login)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Login)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Senha)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Senha)
        </dd>

    </dl>

    <form method="post" onsubmit="confirmDelete(event, this)">
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a class="btn btn-info" href="/Usuarios">Voltar a lista</a>
            
        </div>
    </form>
</div>

<script>
    function confirmDelete(event, form) {
        event.preventDefault();
        let decision = confirm("Deseja mesmo excluir?");
        if (decision) {
            form.submit();
        }
    }
</script>
