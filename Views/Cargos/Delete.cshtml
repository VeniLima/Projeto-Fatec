@model AgoraVaiRecursosHumanos.Models.Cargos

@{
    ViewBag.Title = "Delete";
}

<h2>Deletar</h2>

<h3>Você tem certeza que deseja deletar ?</h3>
<div>
    <h4>Cargos</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Meta)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Meta)
        </dd>

    </dl>

    <form method="post" onsubmit="confirmDelete(event, this)">
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Voltar a lista", "Index")
        </div>
        </form>
</div>

<script>
    function confirmDelete(event, form) {
        event.preventDefault();
        let decision = confirm("Deseja mesmo excluir?");
        if (decision) {
            form.submit();
        }
    }
</script>