            @Html.DisplayFor(modelItem => item.Cpf)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cep)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Idade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cargos.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Departamentos.Nome)
        </td>
